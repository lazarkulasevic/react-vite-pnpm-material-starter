{
  "extends": [
    "@commitlint/config-conventional"
  ],
  "rules": {
    "type-enum": [
      2,
      "always",
      [
        "feat",
        "fix",
        "improvement",
        "build",
        "chore",
        "docs",
        "refactor",
        "style",
        "test",
        "ci"
      ]
    ],
    "subject-case": [
      2,
      "always",
      [
        "sentence-case"
      ]
    ]
  }
}
